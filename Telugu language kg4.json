      // === FORMAL MORPHO-PHONEMIC RULES ===
      {
        "id": "rule_gunintam_k_i", 
        "type": "MorphophonemicRule", 
        "name": "క + ి → కి", 
        "formalRule": "C[cons, +velar] + V[+high, -back] → CV[syllabic] / _#", 
        "implementation": "finite_state_transducer",
        "example": "క + ి = కి", 
        "romanizedExample": "ka + i = ki"
      },
      {
        "id": "rule_anusvara_assimilation", 
        "type": "MorphophonemicRule", 
        "name": "Anusvara place assimilation", 
        "formalRule": "ṃ → N[αplace] / _ C[αplace]", 
        "description": "Anusvara becomes homorganic nasal before consonants.",
        "examples": ["ంప → [mp]", "ంగ → [ŋg]"]
      },
      {
        "id": "rule_retroflexion", 
        "type": "MorphophonemicRule", 
        "name": "n → ṇ / _ {ṭ, ḍ, ṇ}", 
        "formalRule": "n[+coronal, -distributed] → ṇ[+coronal, +distributed] / _ {ṭ, ḍ, ṇ}[+coronal, +distributed]",
        "description": "Dental n becomes retroflex before retroflexes across morpheme boundary."
      },

