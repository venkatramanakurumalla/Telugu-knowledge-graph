        "id": "orth_rule_virama", 
        "type": "OrthographyRule", 
        "name": "Virama suppresses inherent vowel", 
        "pattern": "C + ◌్ → C̚", 
        "formalization": "vowel_deletion_rule",
        "description": "Suppresses /a/ after consonant base for conjuncts.",
        "exceptions": ["loanwords", "sanskrit_origin"]
